
/* For the publication page */

.linkToArchiveWrapper
  color #666666

#publication
  .thumbnail
    padding-top  10px
    /* width 300px*/
    margin auto

  .title
    font-size  120%
    font-weight  bold
    text-align center
    padding-bottom 10px


  .title2
    font-size  120%
    font-weight  bold
    text-align center
    padding-bottom 10px


  .authors
    text-align center


    a
      font-weight normal


  .institution
    font-size  80%
    text-align center


    a
      font-weight normal


#publication, .journal
  padding-top  10px


#publication, .submittedby
  padding-top  10px
  font-size  80%


#publication, .abstract
  padding-top  10px
  padding-bottom  10px


.reviews
  font-size  110%
  text-align center
  font-weight  bold
  border-top  1px solid
  background-color #DDDDDD


.review
  border-top  1px solid
  padding-bottom  20px

.reviewedit
  padding-bottom  20px


.review_header2
  font-size  80%
  background-color #EEEEEE


.review_header
  color  #666666
  background-color #EEEEEE


/* size of reviews paragrahp*/
.review, p
  margin  0.5em 0


