.publication
  position relative
  padding-bottom 30px
  border-bottom  1px dotted #eeeeee


.publication_left
  padding-top  5px


.publication_rating
  position  relative
  top  10px


.publication_description
  position  absolute
  top  0
  left  80px
  width  620px


.publication_title


.publication_authors
  font-size  80%


.publication_authors, a
  font-weight  normal


.publication_abstract
  font-size  90%
  text-align  justify


.publication_footer
  margin-top  5px
  font-size  80%


/* hide un-used element of the ratings*/
div#ratingContainer h4, div#commentsContainer h4
  display none

div#ratingContainer, div#ratingsChart
  display none

div#ratingContainer div#ratingsAverage
  float none!important

div#ratingContainer, span.addRating
  float none!important
  display none!important

div#ratingContainer div#ratingsUsern, div#ratingContainer div.loginToRate
  float right!important
  position relative top -16px
  height  10px

div#ratingContainer, div.ratingsVSpacer
  float none!important
  display none!important


div.Panel
  border-left  1px dotted #eeeeee
  padding-left  5px


div.Panel, h4
  margin-bottom  0
  border-bottom  1px solid grey


.share-icon
  opacity  0.5!important
  // filter  alpha(Opacity=50)!important

td
  border 1px #DDD solid
  padding 5px

tr.clickable-row
  cursor pointer

tr.selected
  background-color  #56758B
  color  #FFF
