#announcement-banner.alertHeader
.TopDynamicBar(style="display:none;")
  .dumbBoxOverlay
  .vertical-offset
    .dumbBox
      .TopDynamicClose
        a.closeButton(onclick="$('.TopDynamicBar').hide();", href="#")
          span
            img(alt="", src="/journal/core/public/images/icons/close.png")
      .TopDynamicContent
      .TopDynamicLoading
        img(alt="", src="/journal/core/public/images/icons/loading.gif")
      input.DynamicContentPage(type="hidden")
.MainDialog(style="display:none;")
  .MainDialogContent
  .MainDialogLoading
    img(alt="", src="/journal/core/public/images/icons/loading.gif")
  input.DialogContentPage(type="hidden")

.Header
  .HeaderTopContent.panelsBackground
    #menu
      a(style='border:none;', href="#")
        #topmenu
      #title.
        Technical Journal
      #toplogin
        #loginForm
          unless user
            a(href='#?dialog=login') Sign In
          if user
            |Welcome #{user.name()}!
            a#logout Log out
      .secondaryNav
        .navWrapper
          a(href="#help/about")
            | About
          unless user
            a#forgotPasswordLink(href='#?dialog=resetpassword')
              | Forgot your password
            a.register(href="#?dialog=register")
              | Register
    #topbar
      ul#Nav.nav.navbar-nav
        li#browseLink
          a(href="#")
            | Home
        li
          a(href="#journals")
            | Journal
        li
          a(href='#submission/new')
            | New Publication
        if user
          li#profileLink
            a.submm(href='#user/' + user.id + '/edit') My Profile
            ul#userOptionsList
              li
                a.submm(href='#?query="creatorId":"'+user.id+'"') My Publications
              li
                a.submm(href='#user/' + user.id + '/edit') Edit Profile
          if user.attributes.admin
            li#adminLink
              a(href='#admin') Admin
              ul#adminOptionsList
                li
                  a.submm(href='#admin') Journals
                li
                  a.submm(href='/#users') Users
                li
                  a.submm(href='#admin/categories').
                    Categories
                li
                  a.submm(href='#admin/disclaimer') Disclaimers
                li
                  a.submm(href='#admin/help') Help & About
                li
                  a.submm(href='/#plugins/tech_journal/config') Config
                li
                  a.submm(href='#admin/questions') Review Questions
        li#helpLink
          a(href="#help")
            | Help
          ul#helpOptionsList
            li
              a.submm(href="#help")
                | Submission and Review
            li
              a.submm(href="#help/faq")
                | F.A.Q.
            li
              a.submm(href="#help/feedback")
                | Feedback
        if user
          if user.attributes.admin
            if (approvalNum > 0)
              li
                a(href="#approval", style="color:orange;")
                  | Waiting Approval : #{approvalNum}

      .HeaderSearch.nav.navbar-nav.navbar-right
        input#live_search.panelsBackground(type="text", value=searchVal, autocomplete="off", autocorrect="off", autocapitalize="off")
        input#live_search_value(type="hidden", value="init")
        #searchloading(style="display:none")
        input#search_button(type="button", value="Search")
        input#clear_button(type="button", value="Clear")
    .HeaderAction
      .viewNoticeWrapper
        .viewNotice
