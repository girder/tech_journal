// Import the font you want to use or delete this
@import url('https://fonts.googleapis.com/css?family=Rubik:400,400i,500,500i,700,700i')
themeFont = Rubik

/* NOTE: Pay attention to how light or dark you set these variables.
 * If it is used as a background color, you want to make sure the text
 * is legible. Change the color attributes in the styles below (look for
 * comments that read, "change based on background color"). */

primaryColor = #7094FF
sidebarBG = #FFFFFF
menuBG    = #FFDB70
body
    background-color #f1f1f1
    font-family themeFont

#toplogin
    #loginForm
        #logout
            background primaryColor
            color white // change based on background color
            &:hover
                background lighten(primaryColor,10%)

.Header
  .HeaderTopContent
    #topbar
      background-color menuBG
    #menu
      background lighten(primaryColor, 60%)
      #topmenu
        height 50px
        padding-left 180
        background url(http://www.insight-journal.org/img/logo.png)
        height 75px
        width 55px
.nav
  & > li
    &:hover
      & > a
        border-bottom-color primaryColor
    ul
      li
        background primaryColor
        border-bottom 1px solid darken(primaryColor,3%)
        color white // change based on background color


table
    &#revisionTable,
    &#submissionTable
        th
            &:nth-of-type(even)
                background darken(primaryColor, 6%)
th
    background primaryColor
td
    &.actions
        a
            background primaryColor
            color white // change based on background color
            &:hover
                background lighten(primaryColor,10%)
tr.selected
  td:first-of-type
    div
      &:before
        border-left-color primaryColor

#publication
  .title
    color #000000

.Content
  .ContentWithLeftPanel,
  .ContentWithRightPanel,
    .Panel
      background sidebarBG
      color black // change based on background color
      a
        color lighten(primaryColor,40%)
    .MainContent
      #infoElement
        &:before
          content "The Insight Journal is an Open Access on-line publication covering the domain of medical image processing and visualization.
The unique characteristics of the Insight Journal include:

- Open-access to articles, data, code, and reviews
- Open peer-review that invites discussion between reviewers and authors
- Emphasis on reproducible science via automated code compilation and testing
- Support for continuous revision of articles, code, and reviews "
div.SearchResultEntry
    div.ResultAuthors
        color lighten(desaturate(primaryColor,10%),20%)

div.issueSelected
  border-left 6px solid lighten(primaryColor,50%)
