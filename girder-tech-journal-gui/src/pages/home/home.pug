mixin issueFilter(info)
  .issueButton(key=info._id)
    .issueTitle(qtipconditional="", style="word-wrap: break-word")
      | #{info.name}
    .issueSubTitle
    .issueDetails
      a.issuePage(href='') Show Details
      a(href="") Submit a new article
#headerBar

.Wrapper
  .Content
    .ContentWithLeftPanel
      .Panel.box
        h2.FilterH3 Filters:
        #FiltersPanel
          #treeWrapper
            include ./journal_main_code_filter.pug
            include ./journal_main_license_filter.pug
            include ./journal_main_review_filter.pug
            include ./journal_main_OV_filter.pug
          .issueButton(key="*")
            .issueTitle(qtipconditional="All", style="word-wrap: break-word")
              | All Issues
          for item in info.issues
            +issueFilter(item)
      .MainContent
        #infoElement
          strong The OSEHRA Technical Journal
          span.
            &nbsp;is an Open Access, on-line publication covering technical topics related to open
            source software for management of electronic health records. The goal of the Journal is
            to foster innovation and to channel this innovation in the form of concrete working
            pieces of software that can later be integrated into the OSEHRA open source platform.
          .hidable
        #noResultElement(style="display:none;")
          b.
            Your search did not match any items.
        .SearchResultsHeader
        .searchResults
        #showMoreResults
          a.
            Show more results
