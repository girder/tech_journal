#headerBar
mixin issueEntry(info)
  tr
    td
      | #{info.parentName}
    td
      a.issueGen(target=info._id, journal=info.parentId) #{info.name}
    td
      | #{info.daysLeft}
    td.actions
      a.issueGen(target=info._id, journal=info.parentId) Select Issue
      a#showDetails(target=info._id) Show details

mixin returnedEntry(info)
  tr
    td
      a.resumeSub(target=info.revisionId) #{info.name}
    td.actions
      a.resumeSub(target=info.revisionId) Select Submission

#pageContent
  .Wrapper
    .Content
      .viewMain
        h3 Choose a journal for your submission
        p#submission
          | Don't know how to submit your paper? Visit the&nbsp;
          a(href="#help") help page
          table#submissionTable(width="100%", border="0")
            thead
              tr
                th(width="15%")
                  div(align="left")
                    strong Journal
                th(width="50%")
                  div(align="left")
                    strong Title
                th(width="10%")
                  div(align="left")
                    strong Days left
                th(width="20%")
                  div(align="left")
                    strong Actions
            tbody
              tr
              each item in info
                +issueEntry(item)
        h3 Or choose from a previously started submission
        p#submission
          | Don't know how to submit your paper? Visit the&nbsp;
          a(href="#help") help page
          table#returnedTable(width="100%", border="0")
            thead
              tr
                th(width="50%")
                  div(align="left")
                    strong Title
                th(width="20%")
                  div(align="left")
                    strong Actions
            tbody
              tr
              each item in revisits
                +returnedEntry(item)
        #issueDetails
        .clear
        .Footer
